<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@css/login.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.shop.LoginController">
    <children>

        <!-- Поле для логина -->
        <TextField fx:id="usernameField" layoutX="151.0" layoutY="106.0" prefHeight="46.0" prefWidth="297.0" promptText="Логин">
            <font>
                <Font size="14.0" />
            </font></TextField>

        <!-- Поле для пароля -->
        <PasswordField fx:id="passwordField" layoutX="151.0" layoutY="158.0" prefHeight="46.0" prefWidth="297.0" promptText="Пароль">
            <font>
                <Font size="14.0" />
            </font></PasswordField>

        <!-- Кнопка входа -->
        <Button fx:id="loginButton" layoutX="152.0" layoutY="211.0" prefHeight="46.0" prefWidth="141.0" styleClass="but" text="Войти">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Button>

        <!-- Кнопка регистрации -->
        <Button fx:id="registerButton" layoutX="307.0" layoutY="211.0" prefHeight="46.0" prefWidth="141.0" styleClass="but" text="Регистрация">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>

    </children>
</AnchorPane>
